
<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <%# 画面左側----------------------------------------------------------------------------------------------------- %>
    <div class="col-md-3">
      <%# <%= render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] % > %>
      <%= render 'shared/sidebar' %>
    </div>

    <%# 画面右側------------------------------------------------------------------------------------------------------------------------------- %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">

        <tbody>

          <tr>
           <td><%= image_tag @book.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %></td>
           <td>タイトル <%= @book.title %></td>
           <td>opinion<%= @book.body %></td>
           
           
           <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book) %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
           <% end %>
            
          </tr>
           
        </tbody>
               
        
      </table>
    </div>
  </div>
</div>