<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<div class="container">
  <div class="row">
    <%# 画面左側----------------------------------------------------------------------------------------------------- %>
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name%></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction%></th>
          </tr>
        </tbody>
      </table>

      <%# ここにrow入れないとボタンが横幅いっぱいにならない %>
      <div class="row">
        <%# .btn-outline-* を適用すると枠線を残してボタンの背景色を透過することができます %>
        <%# .btn-block. を適用すると, 親要素の幅に合わせることができます %>
        <button type="button" class="btn btn-outline-secondary btn-block ">
          人と歯車のマーク
        </button>
      </div>
      <h2 class="mt-3">New book</h2>

      <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <%# 画面右側------------------------------------------------------------------------------------------------------------------------------- %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <%# ここに繰り返し要素を入れてデータを読み込む %>

          <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %></td>
                <td>タイトル <%= book.title %></td>
                <td>opinion<%= book.body %></td>
              </tr>
          <% end %>    
        </tbody>
            
          
          
        
      </table>
    </div>
  </div>
</div>