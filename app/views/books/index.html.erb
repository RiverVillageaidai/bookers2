<%# Books#index %>
<%# Find me in app/views/books/index.html.erb %>
 <%# エラー表示  %>
  <% unless @book.nil?%>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>

<div class="container">
  <div class="row">
    <%# 画面左側----------------------------------------------------------------------------------------------------- %>
    <div class="col-md-3">
      <%# <%= render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] % > %>
      <%= render 'shared/sidebar', user_info: @user %>
    </div>

    <%# 画面右側----------------------------------------------------------------------------------------------------- %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <%# ここに繰り返し要素を入れてデータを読み込む %>

          <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user_id) do %>
                    <%= image_tag book.user.get_profile_image(80,80) %></td>
                  <% end %>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %> 
                </td>
                <td><%= book.body %></td>
              </tr>
          <% end %>    
        </tbody>
            
          
          
        
      </table>
    </div>
  </div>
</div>