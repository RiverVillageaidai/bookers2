<%# Users#show %>
<%# Find me in app/views/users/show.html.erb %>
<%# ユーザー詳細画面 /users/Id %>
<div class="container">
  <div class="row">
    <%# 画面左側----------------------------------------------------------------------------------------------------- %>
    <div class="col-md-3">
      <%# <%= render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] % > %>
      <%= render 'shared/sidebar' %>
    </div>

    <%# 画面右側------------------------------------------------------------------------------------------------------------------------------- %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
      

          <% @books.each do |book| %>
            <% if book.user_id == @user.id %>  
              <tr>
                <td><%= image_tag book.user.get_profile_image(100,100), class: "mt-3 rounded-circle" %></td>
                <%# ユーザーが投稿したbookのみ表示したい %>
                <td>
                  <%= link_to book_path(book.id) do %>
                    ☆<%= book.title %>  
                  <% end %> 
                </td>
                <td>opinion<%= book.body %></td>
              </tr>
            <% end %>  
          <% end %>    
        </tbody>
            
          
          
        
      </table>
    </div>
  </div>
</div>
