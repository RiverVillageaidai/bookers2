<%# Users#index %>
<%# Find me in app/views/users/index.html.erb %>
<%# ユーザー一覧ページ  /users%>
<div class="container">
  <div class="row">
    <%# 画面左側----------------------------------------------------------------------------------------------------- %>
    <div class="col-md-3">
      <%# <%= render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] % > %>
      <%= render 'shared/sidebar' %>
    </div>

    <%# 画面右側------------------------------------------------------------------------------------------------------------------------------- %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%# ここに繰り返し要素を入れてデータを読み込む %>

          <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                 <td>
                  <%= link_to "Show", user_path(user.id)  %>
                </td>
              </tr>
          <% end %>    
        </tbody>
            
          
          
        
      </table>
    </div>
  </div>
</div>