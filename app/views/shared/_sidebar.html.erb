<%# 左側メニューの共通化 %>

      <h2>User info</h2>
      <%= image_tag user_info.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user_info.name%></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user_info.introduction%></th>
          </tr>
        </tbody>
      </table>

      <%# ここにrow入れないとボタンが横幅いっぱいにならない %>
      <div class="row">
        <%# .btn-outline-* を適用すると枠線を残してボタンの背景色を透過することができます %>
        <%# .btn-block. を適用すると, 親要素の幅に合わせることができます %>
        <button type="button" class="btn btn-outline-secondary btn-block ">
          <%= link_to  edit_user_path(user_info.id) do %>
            <i class="fa-solid fa-user-gear text-secondary"></i> 
          <% end %>
        </button>
      </div>
      <h2 class="mt-3">New book</h2>

      <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <div class="form-group"> 
        <%= f.submit 'Create Book',class: 'btn btn-success' %>
      </div>
      <% end %>